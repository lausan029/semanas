<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.product.name %></td>
        <td><%= order.product.price %></td>
        
      </tr>
    <% end %>
    <tr>
        <td>Total : </td>
        <td><%= @orders.map{|o| o.product.price}.sum %></td>
        
    </tr>
  </tbody>
</table>

<br>